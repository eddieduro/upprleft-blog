{{#if updatePost}}
<h3>Update {{post.title}}, created on {{post.date}}</h3>
<div>
  <form>
    <div class="form-group">
      <label for="title">Headline</label>
      {{input value=title id="title" placeholder=post.title}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea value=body id="body" placeholder=post.body}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" placeholder=post.image}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=post.date}}
    </div>

    <button class="btn-lg btn-info"{{action 'update' post}}>Save Updates</button>
  </form>
</div>
{{else}}
<button class="btn-lg btn-info" {{action 'updatePost'}}>Update</button>
{{/if}}
