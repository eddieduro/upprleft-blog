{{#if addNewComment}}
<section class="commentSection">
  <h3>New Comment:</h3>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="date">Date: </label>
        {{input type="date" value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="message">Message:</label>
        {{textarea value=message id="message"}}
      </div>

      <button class="btn saveBtn" {{action 'saveComment'}}>Save</button>
    </form>
  </div>
</section>
{{else}}
<div class="container">
  <div class="comment text-center">
    <h2 class="text-center" {{action 'commentFormShow'}}> Comment</h2>
  </div>
</div>
{{/if}}
